package Chinmay;
import java.util.Scanner;
public class starpattern {
	public static void main(String args[]) {
		int i,n,j;
		Scanner in = new Scanner(System.in);
		System.out.println("Enter the range:");
		n=in.nextInt();
		for(i=1;i<=n;i++) {
			for(j=1;j<=i;j++) {
			    System.out.print("*");
			}
			System.out.println();
		}
	}

}
